@model IEnumerable<MfWebProject.Models.Akademisyenler>

@{
    ViewBag.Title = "Index2";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

<h2>Akademisyenler</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.AdSoyad)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Calısmalar)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Bolum)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Dal)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.AdSoyad)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Calısmalar)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Bolum)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Dal)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.AkademiNo }, new { @class = "text-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.AkademiNo },new { @class = "text-danger" })
        </td>
    </tr>
}

</table>
